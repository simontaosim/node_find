<% error = @deliver_sign.errors.include?(:deliver_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :deliver_id, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :deliver_id, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:deliver_id) : "Ex: a simple text" %></span>
  </div>
</fieldset>
